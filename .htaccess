
# Instrução para o Apache servir arquivos .ts e .tsx como JavaScript
<IfModule mod_mime.c>
    AddType application/javascript .ts
    AddType application/javascript .tsx
</IfModule>

# Configuração de Cache e Segurança básica
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

# Fallback para Single Page Application (opcional, mas recomendado)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>
